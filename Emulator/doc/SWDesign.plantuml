@startuml Swdesign
left to right direction

package "User Input" {
  [Keyboard] --> [CANTransmitter]
}

package "DriveLine" {
  [CANTransiever]
  [Server]
  [Server] <-> [Driveline Simulator]
}

package "Display" {
  [CANReceiver]
  [display]
}

[CANTransmitter] --> [CANTransiever] : vcan0
[CANTransiever] <-> [Server]
[CANTransiever] --> [CANReceiver] : vcan0
[CANReceiver] --> [display]

@enduml
